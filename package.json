{
  "name": "@joost_lambregts/azure-functions-servicebus-retries",
  "version": "0.1.0",
  "description": "Retry extension for Azure Functions Servicebus queue trigger",
  "type": "module",
  "main": "dist/main.cjs",
  "types": "dist/main.d.ts",
  "exports": {
    "require": {
      "types": "./dist/main.d.cts",
      "default": "./dist/main.cjs"
    },
    "import": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "vitest-nolint": "vitest --passWithNoTests",
    "pretest": "npm run lint && tsc --noEmit",
    "test": "vitest --run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JoostLambregts/azure-functions-servicebus-retries"
  },
  "homepage": "https://github.com/JoostLambregts/azure-functions-servicebus-retries#readme",
  "bugs": {
    "url": "https://github.com/JoostLambregts/azure-functions-servicebus-retries/issues"
  },
  "keywords": [
    "azure",
    "azure-functions",
    "servicebus",
    "service-bus",
    "retry",
    "backoff",
    "exponential-backoff"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Joost Lambregts",
  "license": "MIT",
  "peerDependencies": {
    "@azure/functions": "^4.5.0"
  },
  "devDependencies": {
    "@azure/functions": "^4.5.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/conventional-commits-parser": "^5.0.0",
    "@types/node": "^22.15.18",
    "@vitest/coverage-v8": "^3.1.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.27.0",
    "husky": "^9.1.6",
    "tsup": "^8.5.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3",
    "vitest-mock-extended": "^3.1.0"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@azure/service-bus": "^7.9.5",
    "date-fns-tz": "^3.2.0"
  }
}
